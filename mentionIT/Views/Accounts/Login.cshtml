<style>

    body {
        background-image: url("/Images/Sinup_SignIn.png");
    }
</style>
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Login_Layout.cshtml";
}
@{
    ViewBag.Title = "User Login";
}

<section1 class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-5">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center" style="padding-bottom:20px">
                                    <a class="navbar-brand" asp-area="" asp-controller="Meals" asp-action="Index">
                                        <img src="~/Images/MentionIT_Logo.png" width="150" height="50" />
                                    </a>
                                </div>

                                <form method="post">

                                    <div class="form-outline mb-4">
                                        <input asp-for="Email" type="email" id="form2Example11" class="form-control"
                                               placeholder="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Password" type="password" id="form2Example22" class="form-control" placeholder="Password"/>
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit" style="height:40px">
                                            Log
                                            in
                                        </button>
                                        <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                            <a href="#!" class="text-danger"><i class="fab fa-facebook-f fa-lg"></i></a>
                                            <a href="#!" class="text-danger"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                            <a href="#!" class="text-danger"><i class="fab fa-google fa-lg"></i></a>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <font face="Bedrock" size="5">Don't have an account? </font><br />
                                        <a asp-action="Register" class="btn btn-outline-danger" style="margin-left:5px;">Create new</a>
                                    </div>

                                </form>

                            </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section1>
