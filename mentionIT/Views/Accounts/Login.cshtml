<style>

    body {
        background-image: url("/Images/Sinup_SignIn.png");
    }
</style>
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Login_Layout.cshtml";
}
@{
    ViewBag.Title = "User Login";
}
<h1 class="login">Login</h1>

<div class="row" style="padding-top:5%;">
    <div class="col-md-12">
        <form method="post">
            <div class="form-group" style="width:50%; display: block; margin-left: 25%;">
                <input asp-for="Email" placeholder="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="width:50%; display: block; margin-left: 25%;">
                <input asp-for="Password" placeholder="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                   <div class="checkbox">
                       <label asp-for="RememberMe"></label>
                       <input asp-for="RememberMe" />
                   </div>
                </div>*@
            <button style="display: block; margin-left: 47%; " type="submit" class="btn btn-danger">Login</button>
        </form>
    </div>
    <footer class="footLog">Don't have an account? click here to <a asp-area="" asp-controller="Accounts" asp-action="Register">Register</a></footer>
</div>