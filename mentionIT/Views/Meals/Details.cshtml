@model mentionIT.Models.Meal

@{
    Layout = "~/Views/Shared/_Homepage_Layout.cshtml";
}

@{
    ViewData["Title"] = "Details";
}
<div class="create-cont">
    <div class="blog-single gray-bg">
        <div class="container">
            <div class="row align-items-start">
                <div class="col-lg-8 m-15px-tb">
                    <article class="article">

                        <div class="widget-title">
                            <h3>@Html.DisplayFor(model => model.Name)</h3>
                        </div>
                        <div class="article-img">
                            <img src="~/ImageForMeals/@Html.DisplayFor(model => model.MealImage)" style="width:600px;height:350px;" class="card-img-top">
                        </div>
                        <div class="article-title">
                            <h6>
                                <a href="https://localhost:44353/ImageForMeals/@Html.DisplayFor(model => model.MealImage)">Full Image</a>
                                <br />
                                <br />
                                <a asp-route-id="@Model.Id" asp-route-changeLikes="true"><img src="~/Images/love.png" alt="like_img" width="40" height="40" /></a>
                                @Html.DisplayFor(model => model.Likes)
                            </h6>
                            <h2>The steps bellow will help you get started!</h2>
                            <div class="media">
                                <div class="avatar">
                                    <img src="~/Images/profile_icon.jpg" title="" alt="">
                                </div>
                                <div class="media-body">
                                    <label>Author name: @Html.DisplayFor(model => model.AuthorName)</label>
                                    <br />
                                    <label>Cuisine: @Html.DisplayFor(model => model.Cuisine)</label>
                                </div>
                            </div>
                        </div>
                        <div class="article-content">
                            @if (Model.RecipeSteps == null)
                            {
                                <h4>Sorry! No steps provided. Check out the video!</h4>
                            }else
                            {
                            <textarea readonly class="text-area">@Html.DisplayFor(model => model.RecipeSteps)</textarea>
                            }
                            <blockquote>
                                <div class="widget-title">
                                    <h4>Recipe Video</h4>
                                </div>
                                <iframe class="embed-responsive" id="cartoonVideo" width="600" height="350" src="https://youtube.com/embed/@Html.DisplayFor(model => model.YLink)" frameborder="0" allowfullscreen></iframe>

                                <p class="blockquote-footer">Recipe video for @Html.DisplayFor(model => model.Name)</p>
                            </blockquote>
                        </div>
                        <div class="nav tag-cloud">
                            <a href="#">Content</a>
                            <a href="#">Content</a>
                            <a href="#">Content</a>
                            <a href="#">Content</a>
                            <a href="#">Content</a>
                            <a href="#">Content</a>
                            <a href="#">Content</a>
                        </div>
                    </article>
                    <div class="contact-form article-comment">
                        <h4>Leave a Comment!</h4>
                        <form id="contact-form" method="POST">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <textarea name="message" id="message" placeholder="Comment..." rows="4" class="form-control"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="send">
                                        <button class="px-btn theme"><span>Submit</span> <i class="arrow"></i></button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-4 m-15px-tb blog-aside">
                    <!-- Author -->
                    <div class="widget widget-author">
                        <div class="widget-title">
                            <h3>Description</h3>
                        </div>
                        <div class="widget-body">
                            <div class="media align-items-center">
                                <div class="avatar">
                                    <img src="~/Images/profile_icon.jpg" title="" alt="">
                                </div>
                                <div class="media-body">
                                    <h6>@Html.DisplayFor(model => model.AuthorName)</h6>
                                </div>
                            </div>
                            <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
                        </div>
                    </div>

                    <div class="widget widget-latest-post">
                        <div class="widget-title">
                            <h3>Latest Post</h3>
                        </div>
                        <div class="widget-body">
                            <div class="latest-post-aside media">
                                <div class="lpa-left media-body">
                                    <div class="lpa-title">
                                        @*@for (var i = 1; i <= 1; i++)
                                            {
                                                Random r = new Random();
                                                Model.Id = r.Next(Model.Id,38);
                                            }*@
                                        <a asp-route-id="@Model.Id" asp-action="Details">View A Post Now!</a>

                                    </div>
                                    <div class="lpa-meta">
                                        <a class="name" href="#">
                                            @Html.DisplayFor(model => model.AuthorName)
                                        </a>

                                    </div>
                                </div>
                                <div class="lpa-right">
                                    <a href="#">
                                        <img src="https://via.placeholder.com/400x200/FFB6C1/000000" title="" alt="">
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- End Author -->
                    <!-- Trending Post -->
                    <div class="widget widget-post">
                        <div class="widget-title">
                            <h3>Trending Now</h3>
                            <br />
                            <p style="font-family: Source Sans Pro!important;font-style: normal;font-weight: bold;font-size: 16px;line-height: 16px;color:#282A35">Visit the College behind the works</p>
                            <a href="https://www.conestogac.on.ca/" style="font-family: Source Sans Pro!important;font-style: normal;font-size: 16px;line-height: 16px;"> Visit Conestoga college</a>
                            <img src="~/Images/ConestogaReference.jpg" class="card-img-top" />
                            <h2 style="color:red">Full Time Programs</h2>
                            <div class="feature-list">
                                <ul class="checked-list">
                                    <li>Content</li>
                                    <li>Content</li>
                                    <li>Content</li>
                                    <li>Content</li>
                                    <li>Content</li>
                                    <li>Content</li>
                                    <li>Content</li>
                                    <li>Content</li>
                                    <li>Content</li>
                                    <li>Content</li>
                                    <li>Content :-}</li>
                                </ul>
                            </div>
                        </div>
                        <div class="widget-body">

                        </div>
                    </div>
                    <!-- End Trending Post -->
                    <!-- Latest Post -->
                    <!-- End Latest Post -->
                    <!-- widget Tags -->
                    <div class="widget widget-tags">
                        <div class="widget-title">
                            <h3>Latest Tags</h3>
                        </div>
                        <div class="widget-body">
                            <div class="nav tag-cloud">
                                <a href="#">Content</a>
                                <a href="#">Content</a>
                                <a href="#">Content</a>
                                <a href="#">Content</a>
                                <a href="#">Content</a>
                                <a href="#">Content</a>
                                <a href="#">Content</a>
                            </div>
                        </div>
                    </div>
                    <!-- End widget Tags -->
                </div>
            </div>
        </div>
    </div>
</div>